</head>
<body>
  <!-- sidebar w/ profile icon -->
  <div class="sidebar">
    <aside>
      <a href="/edit"><img src="https://i.ibb.co/55wr5sW/profile-icon.png" alt="profile-icon"></a>
    </aside>
  </div>
  <!-- tasks view here -->
  <main class="container">
    <!-- the button to add a task -->
    <div class="add-task">
      <!-- <form action="/tasks" method="POST" id="tasksform">  -->
      <button name="task" class="task-button"><i class="fas fa-feather fa-lg"></i></button>
      <!-- </form> -->
    </div>
    <!-- the div for the 4 category cards -->
    <div class="cards">
      <!-- this is the to watch card -->
      <section class="category-card">
        <h5>things to watch</h5>
        <ul id="towatch">
        </ul>
      </section>
      <!-- this is the to eat card -->
      <div class="category-card">
        <h5>places to eat at</h5>

        <ul id="toeat">
          <li>yolks</li>
          <li>osterio savio volpe</li>
          <li>osterio savio volpe</li>
          <li>osterio savio volpe</li>
        </ul>

        <!-- this will eventually be a section like this:
          <section class="to-eat-list"></section> -->
      </div>

      <!-- this is the to read card -->
      <div class="category-card">
        <h5>books to read</h5>
        <ul id="toread">
          <li>the name of the wind</li>
          <li>mistborn</li>
        </ul>
        <!-- this will eventually be a section like this:
          <section class="to-read-list"></section> -->
      </div>

      <!-- this is the to buy card -->
      <div class="category-card">
        <h5>things to buy</h5>
        <ul id="tobuy">
          <li>shampoo</li>
          <li>potatoes</li>
        </ul>
        <!-- this will eventually be a section like this:
          <section class="to-buy-list"></section> -->
      </div>
    </div>
  </main>
</body>
</html>