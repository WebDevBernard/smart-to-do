<!DOCTYPE html>
<html lang="en">

<head>
  <title>to-do</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main-html.css" type="text/css" />
  <link rel="stylesheet" href="/styles/cards.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/modal.js"></script>
  <script type="text/javascript" src="/scripts/sortable.js"></script>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- External JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery-sortablejs@latest/jquery-sortable.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.13.0/Sortable.min.js"></script>

</head>

<body>
  <!-- sidebar w/ profile icon -->
  <div class="sidebar">
    <aside>
      <button id="myBtn"><img src="https://i.ibb.co/55wr5sW/profile-icon.png" alt="profile-icon"></button>
    </aside>
  </div>

  <!-- The Modal -->
  <div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
      <span class="close">&times;</span>
      <form method="UPDATE" action="users" id="edit-profile">
        <h3 class="edit">edit profile</h3>
        <label for="username">email:</label><p>
        <input name="username" id="username" />
        <p>
    
        <label for="password">password:</label><p>
        <input name="password" id="password" />
        <p>
    
        <button type="submit" class="edit-button">submit!</button>
      </form>
    </div>

  </div>

  <!-- tasks view here -->
  <main class="container">
    <!-- the button to add a task -->
    <div class="add-task">
      <form action="/tasks" method="POST" id="tasksform">
        <textarea name="text-box" id="text-box"></textarea>
      <button name="task" class="task-button"><i class="fas fa-feather fa-lg"></i></button>
      </form>
    </div>


    <!-- the div for the 4 category cards -->
    <div class="cards">

      <!-- this is the to watch card -->
      <div class="category-card">
        <h5>things to watch</h5>
        <ul id="to-watch">
        </ul>

      </div>
      <!-- this is the to eat card -->
      <div class="category-card">
        <h5>places to eat at</h5>

        <ul id="to-eat">
          <li>yolks</li>
          <li>osterio savio volpe</li>
          <li>osterio savio volpe</li>
          <li>osterio savio volpe</li>
        </ul>
      </div>

      <!-- this is the to read card -->
      <div class="category-card">
        <h5>books to read</h5>
        <ul id="to-read">
          <li>the name of the wind</li>
          <li>mistborn</li>
        </ul>
      </div>

      <!-- this is the to buy card -->
      <div class="category-card">
        <h5>things to buy</h5>
        <ul id="to-buy">
          <li>shampoo</li>
          <li>potatoes</li>
        </ul>
      </div>

    </div>


  </main>
  <script src="./scripts/modal.js"></script>
</body>

</html>
